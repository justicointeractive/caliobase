{
  "name": "caliobase",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/caliobase/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/caliobase",
        "tsConfig": "packages/caliobase/tsconfig.lib.json",
        "packageJson": "packages/caliobase/package.json",
        "main": "packages/caliobase/src/index.ts",
        "assets": ["packages/caliobase/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/caliobase"],
      "options": {
        "jestConfig": "packages/caliobase/jest.config.ts"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "trackDeps": true,
        "postTargets": ["caliobase:deploy"]
      }
    }
  },
  "tags": []
}
