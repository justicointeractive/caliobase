{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tailwindcss-color-css-vars/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/tailwindcss-color-css-vars",
        "main": "packages/tailwindcss-color-css-vars/src/index.ts",
        "tsConfig": "packages/tailwindcss-color-css-vars/tsconfig.lib.json",
        "assets": ["packages/tailwindcss-color-css-vars/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/tailwindcss-color-css-vars/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/tailwindcss-color-css-vars"],
      "options": {
        "jestConfig": "packages/tailwindcss-color-css-vars/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "trackDeps": true,
        "postTargets": ["tailwindcss-color-css-vars:deploy"]
      }
    }
  },
  "tags": []
}
