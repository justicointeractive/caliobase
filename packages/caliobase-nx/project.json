{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/caliobase-nx/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/caliobase-nx",
        "main": "packages/caliobase-nx/src/index.ts",
        "tsConfig": "packages/caliobase-nx/tsconfig.lib.json",
        "assets": [
          "packages/caliobase-nx/*.md",
          {
            "input": "./packages/caliobase-nx/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/caliobase-nx/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/caliobase-nx",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/caliobase-nx",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/caliobase-nx/**/*.ts",
          "packages/caliobase-nx/generators.json",
          "packages/caliobase-nx/executors.json",
          "packages/caliobase-nx/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/caliobase-nx"],
      "options": {
        "jestConfig": "packages/caliobase-nx/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "trackDeps": true,
        "postTargets": ["caliobase-nx:deploy"]
      }
    }
  },
  "tags": []
}
